{
  "name": "social-media-microservices",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "auth-service",
    "user-service",
    "post-service",
    "media-service",
    "interaction-service",
    "feed-service",
    "notification-service",
    "search-service",
    "moderation-service"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "lint:all": "npm run lint --workspaces",
    "dev:all": "concurrently \"npm:dev:*\"",
    "dev:auth": "npm run dev --workspace=auth-service",
    "dev:user": "npm run dev --workspace=user-service",
    "dev:post": "npm run dev --workspace=post-service",
    "dev:media": "npm run dev --workspace=media-service",
    "dev:interaction": "npm run dev --workspace=interaction-service",
    "dev:feed": "npm run dev --workspace=feed-service",
    "dev:notification": "npm run dev --workspace=notification-service",
    "dev:search": "npm run dev --workspace=search-service",
    "dev:moderation": "npm run dev --workspace=moderation-service"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
