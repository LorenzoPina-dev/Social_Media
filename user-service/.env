# ============================================================================
# USER SERVICE - DEVELOPMENT ENVIRONMENT
# ============================================================================

# Environment
NODE_ENV=development
PORT=3002
SERVICE_NAME=user-service

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/social_media
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=user-service
KAFKA_GROUP_ID=user-service-group

# Cache TTLs
CACHE_PROFILE_TTL=3600
CACHE_FOLLOWERS_TTL=300
CACHE_SEARCH_TTL=600

# GDPR
GDPR_SOFT_DELETE_GRACE_PERIOD=2592000
GDPR_DATA_EXPORT_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Logging
LOG_LEVEL=debug
LOG_PRETTY_PRINT=true

# Metrics
METRICS_PORT=9091
METRICS_PATH=/metrics

# Tracing
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_SAMPLE_RATE=0.1

# Pagination
PAGINATION_DEFAULT_PAGE_SIZE=20
PAGINATION_MAX_PAGE_SIZE=100
