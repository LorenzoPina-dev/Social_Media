# Post Service â€” Environment Variables
# Copia in .env e personalizza i valori

# General
NODE_ENV=development
PORT=3003
LOG_LEVEL=info
LOG_PRETTY_PRINT=true

# Database (post_db)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/post_db
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Kafka
KAFKA_BROKERS=localhost:9092

# JWT (shared secret con auth-service)
JWT_ACCESS_SECRET=your-super-secret-jwt-key-change-in-production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Metrics
METRICS_PORT=9093
METRICS_PATH=/metrics

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_CRON=*/60 * * * * *

# Moderation (chiamata HTTP interna)
MODERATION_SERVICE_URL=http://localhost:3009
