{
  "name": "post-service",
  "version": "1.0.0",
  "description": "Production-ready post-service microservice â€” CRUD post, hashtag, scheduling, edit history",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --selectProjects unit integration e2e",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e --testTimeout=30000",
    "test:coverage": "jest --selectProjects unit integration e2e --coverage",
    "test:watch": "jest --selectProjects unit --watch",
    "test:ci": "jest --selectProjects unit integration e2e --coverage --ci --forceExit",
    "migrate": "knex --knexfile knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile knexfile.ts migrate:rollback",
    "migrate:test": "NODE_ENV=test knex --knexfile knexfile.ts migrate:latest",
    "migrate:make": "knex --knexfile knexfile.ts migrate:make",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "db:init": "ts-node scripts/init-db.ts"
  },
  "dependencies": {
    "@social-media/shared": "file:../shared",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.3",
    "kafkajs": "^2.2.4",
    "knex": "^3.1.0",
    "node-cron": "^3.0.3",
    "pg": "^8.18.0",
    "prom-client": "^15.1.0",
    "rate-limit-redis": "^4.3.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
