{
  "name": "media-service",
  "version": "1.0.0",
  "description": "Production-ready media-service microservice",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --config jest.config.js --coverage",
    "test:unit": "jest --config jest.config.js --testPathPattern=tests/unit",
    "test:integration": "jest --config jest.config.js --testPathPattern=tests/integration",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:all": "npm run test && npm run test:e2e",
    "db:init": "ts-node scripts/init-db.ts",
    "db:migrate": "ts-node scripts/init-db.ts --migrate",
    "db:seed": "ts-node scripts/init-db.ts --seed",
    "db:rollback": "ts-node scripts/init-db.ts --rollback",
    "db:fresh": "ts-node scripts/init-db.ts --fresh",
    "db:status": "ts-node scripts/init-db.ts --status",
    "db:create": "ts-node scripts/init-db.ts --create-db",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "knex": "^3.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "express-async-errors": "^3.1.1",
    "@social-media/shared": "file:../shared"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/s3-request-presigner": "^3.500.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.11",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  }
}
