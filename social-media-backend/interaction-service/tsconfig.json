{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@social-media/shared": ["../shared/dist", "../shared/src"],
      "@social-media/shared/*": ["../shared/dist/*", "../shared/src/*"]
    },
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
