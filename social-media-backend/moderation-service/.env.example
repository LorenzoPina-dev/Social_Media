NODE_ENV=development
PORT=3009
SERVICE_NAME=moderation-service

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/moderation_db
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/moderation_test_db

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=moderation-service-group

# JWT (shared secret per validazione token)
JWT_ACCESS_SECRET=your-access-secret-here

# Perspective API (ML text moderation)
PERSPECTIVE_API_KEY=your-perspective-api-key
PERSPECTIVE_API_URL=https://commentanalyzer.googleapis.com/v1alpha1

# AWS Rekognition (ML image moderation)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# Servizi interni (HTTP)
POST_SERVICE_URL=http://localhost:3003
MEDIA_SERVICE_URL=http://localhost:3004

# Moderation soglie ML
ML_AUTO_REJECT_THRESHOLD=0.8
ML_AUTO_APPROVE_THRESHOLD=0.2

# Logging
LOG_LEVEL=info
